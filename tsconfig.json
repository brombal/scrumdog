{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "baseUrl": "./",
    "sourceMap": true,
    "noEmit": true,
    "paths": {
      "client/*": ["./client/src/*"],
      "server/*": ["./server/src/*"]
    }
  },
  "include": ["client/src/**/*.tsx", "client/src/**/*.ts", "server/src/**/*.ts"],
}
