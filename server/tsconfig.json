{
  "compilerOptions": {
    "lib": ["dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@server/*": ["src/*"],
      "@shared/*": ["shared/*"]
    }
  }
}
